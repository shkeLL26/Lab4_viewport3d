<UserControl x:Class="WPF_lab4.Function3DControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_lab4"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Viewport3D Name="viewport3D">
        <Viewport3D.Camera >
            <PerspectiveCamera x:Name="camera" Position="10,10,10" LookDirection="-10,-10,-10" />
        </Viewport3D.Camera>
        <ModelVisual3D x:Name="visual">
            <ModelVisual3D.Content>
                <DirectionalLight x:Name="light" Color="White"/>
            </ModelVisual3D.Content>
            <ModelVisual3D.Transform>
                <Transform3DGroup>
                    
                </Transform3DGroup>
            </ModelVisual3D.Transform>
        </ModelVisual3D>
    </Viewport3D>
</UserControl>
